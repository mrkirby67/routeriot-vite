rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- WIDE OPEN DEVELOPMENT RULE ---
    // This single wildcard rule makes the entire database publicly readable and writable.
    // It matches every document in every collection and subcollection.
    // WARNING: This is for development ONLY and is not secure for a live application.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}