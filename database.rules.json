{
  "rules": {
    "ff": {
      "$gameId": {
        "rounds": {
          "$roundId": {
            "winner": {
              ".read": "auth != null",
              ".write": "auth != null"
            },
            "attempts": {
              "$uid": {
                ".read": "auth != null",
                ".write": "auth != null && auth.uid === $uid && !data.exists()"
              }
            },
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "state": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
